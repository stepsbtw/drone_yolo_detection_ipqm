# Drone Service Configuration

# ========================================
# REST API Configuration
# ========================================
STREAM_URL=link_scua_docker_stream
APIKEY=aqui_api_key

# ========================================
# Camera/Drone Configuration
# ========================================
CAMERA_ID=drone-01
CAMERA_NAME=Drone Camera 01
CAMERA_LATITUDE=-22.820741667 # APARTIR DA FOTO QUE TIRAMOS
CAMERA_LONGITUDE=-43.186761111

# Camera sensor parameters (EVO 2 Dual V2 defaults)
SENSOR_WIDTH_MM=6.4
SENSOR_HEIGHT_MM=4.8
FOCAL_35MM_MM=25.6
IMAGE_WIDTH_PX=1920
IMAGE_HEIGHT_PX=1080

# ========================================
# Video Configuration
# ========================================
# Socket mode: Receive real-time video from cellphone
# Set to true to enable socket mode, false for file mode
USE_SOCKET=true
SOCKET_PORT=5555

# File mode: Read from video file
VIDEO_INPUT=inputs/clips/real_10_02_clip_000_1080p_compressed_10fps.mp4
VIDEO_LOOP=true
VIDEO_FPS_LIMIT=10

# ========================================
# Detection Configuration
# ========================================
ENABLE_TRACKING=true
ENABLE_WEAPON_DETECTION=true

# Show separate bounding boxes for weapons (in addition to person bbox)
# false = Only person bbox with weapon flag (simpler, default)
# true = Person bbox (green) + weapon bbox (red) separately (detailed)
SHOW_WEAPON_BBOX=false

PERSON_CONFIDENCE=0.8
WEAPON_CONFIDENCE=0.2
MODEL_PEOPLE=models/people/yolo11n.pt
MODEL_WEAPONS=models/weapons/yolov8guns.pt

# ========================================
# Streaming Configuration
# ========================================
JPEG_QUALITY=80
FRAME_TIMEOUT=10
